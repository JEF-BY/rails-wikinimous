<div class="container">
  <div class="d-flex">
    <h2><%= @article.title %></h2>
    <p><%= link_to "<i class=\"fa-solid fa-pencil\"></i>".html_safe, edit_article_path(@article) %></p>
    <p><%= link_to "<i class=\"fa-regular fa-trash-can\"></i>".html_safe, article_path(@article), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>
  </div>
  <p><%= @article.content %></p>
</div>
